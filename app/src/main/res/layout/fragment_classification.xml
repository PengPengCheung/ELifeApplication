<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_centerInParent="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:id="@+id/layout_part1"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_above="@+id/layout_part2"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/part1"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:src="@drawable/part1" />

            <ImageButton
                android:id="@+id/star1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignRight="@+id/part1"
                android:background="#ffffff"
                android:src="@drawable/star_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_part2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/part2"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:src="@drawable/part2" />

            <ImageButton
                android:id="@+id/star2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/part2"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:src="@drawable/star_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_part3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/layout_part2"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/part3"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:src="@drawable/part3" />

            <ImageButton
                android:id="@+id/star3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/part3"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:src="@drawable/star_dark" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>